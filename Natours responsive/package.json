{
  "name": "natours",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    
    "watch:sass": "sass sass/main.scss css/main.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",

    "compile:sass": "sass sass/main.scss css/main.comp.css",
    "concat:css": "concat -o css/main.concat.css css/icon-font.css css/main.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 version' css/main.concat.css -o css/main.prefix.css",
    "compress:css": "sass css/main.prefix.css css/main.css --style compressed",
    "build:css":"npm-run-all compile:sass concat:css prefix:css compress:css"
    
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.3.1",
    "concat": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "sass": "^1.35.2"
  }
}
